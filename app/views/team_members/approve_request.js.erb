$("div.default-dialog").dialog({
    title:'Member Request',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#recd-member-req-<%= @request.id %>").hide("drop", { direction: "up" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('Approved Member Request from <%= @team.name %>');
<% else %>
    $("div.default-dialog").html('Could not approve Member Request from <%= if @team then @team.name else 'N/A' end %>: <%= @message %>');
<% end %>