<%= form_for(@rink) do |f| %>
  <% if @rink.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rink.errors.count, "error") %> prohibited this rink from being saved:</h2>

      <ul>
      <% @rink.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
    <%= f.fields_for :address do |builder| %>
        <%= render 'shared/address_fields', :f => builder %>
    <% end%>
  <div class="field">
    <%= f.label :owner_name, 'Owner Name' %><br />
    <%= f.text_field :owner_name %>
  </div>
  <div class="field">
    <%= f.label :contact_name, 'Contact Name' %><br />
    <%= f.text_field :contact_name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

