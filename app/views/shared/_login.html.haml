.login
  - if member_signed_in?
    .grid_2.alpha
      %h2= current_member.first_name.capitalize
    .grid_2.omega
      %h2
        =# link_to 'Log Out', destroy_member_session_path, :method => 'delete', :id => 'logout-link'
        = link_to 'Log Out', destroy_member_session_path, :method => 'delete', :id => 'logout-link'
  - else
    .grid_2.alpha
      %h2
        =# link_to 'Log In', new_member_session_path, :id => 'login-link'
        = link_to 'Log In', new_member_session_path, :id => 'login-link'
    .grid_2.omega
      %h2
        =# link_to 'Register', new_member_registration_path, :id => 'register-link'
        = link_to 'Register', new_member_registration_path, :id => 'register-link'
