$("div.default-dialog").dialog({
    title:'Add Friend',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#recd-req-<%= @friendship.id %>").hide("drop", { direction: "up" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('Successfully added <%= @friendship.member.full_name %> as a Friend');
<% else %>
    $("div.default-dialog").html('Could not add <%= @friendship.member.full_name %> as a Friend');
<% end %>