$("div.default-dialog").dialog({
    title:'Add Friend',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#recd-req-<%= @friendship.id %>").hide("drop", { direction: "down" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('Request from <%= @friendship.member.full_name %> denied');
<% else %>
    $("div.default-dialog").html('Could not deny request from <%= @friendship.member.full_name %>');
<% end %>