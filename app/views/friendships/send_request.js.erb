$("div.default-dialog").dialog({
    title:'Add Friend',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#friend-req-<%= @member.id %>").hide("drop", { direction: "up" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('Sent Friend Request to <%= @member.full_name %>');
<% else %>
    $("div.default-dialog").html('Could Send Friend Request to <%= if @member then @member.full_name else 'N/A' end %>: <%= @message %>');
<% end %>