$("div.default-dialog").dialog({
    title:'Remove Team Member',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#team-member-<%= @tm.id %>").hide("drop", { direction: "down" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('Kicked <%= @member.full_name %> off your team');
<% else %>
    $("div.default-dialog").html('Could not kick <%= @member.full_name %> off your team');
<% end %>