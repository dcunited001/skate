$("div.default-dialog").dialog({
    title:'Quit Team',
    show: { effect: "fold", options: {}, speed: 150 },
    hide: { effect: "explode", options: {}, speed: 150 },
    modal:true,
    buttons: {
        Ok: function () {
            $(this).dialog("close");

            <% if @success %>
                $("#home-team-<%= @team.id %>").hide("drop", { direction: "down" }, 1000);
            <% end %>
        }
    }
});

<% if @success %>
    $("div.default-dialog").html('You just quit <%= @team.name %> =/');
<% else %>
    $("div.default-dialog").html('Could not quit <%= @team.name %>');
<% end %>